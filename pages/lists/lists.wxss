page{
 
  background-color:#FEC0CD;
 
}
.con{display:flex; flex-direction: column;overflow-block: auto; width: 100%; height: 900rpx;}

.pockets{ padding: 5rpx;}
.pocket{ display: flex; flex-direction: row; border: 2px solid black;
  height: 150rpx;}

.pocket .bg{ width: 100%; height: 100%; background-color: #4CC2A6; opacity: 1;}
.bg { width: 100%; height: 100%;}

.bg text{font-size: 40rpx;}

.bg.logo{ width: 150rpx; height: 150rpx; text-align: right;}
.logo image{ width: 90rpx; height: 90rpx; align-items: center; padding: 20%;}

.tag{height: 100%; align-items: center; box-sizing: border-box; position: relative;}

.txt{font-size: 47rpx;}

.tianjia{ 
  width:120rpx; height: 120rpx;
  position: absolute;
  top: 7%; left: 82%;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  background-color:rgba(177, 21, 0, 0.5);
  border: 5rpx solid #8b8b8b;
  border-radius: 50%;
}

.add{
  border-radius: 50%;
  width: 80%; height: 100%;
  position: relative;
  text-align: center;
  font-size: 35rpx;
  align-items: center;
  justify-content: center;
  margin-top: 15rpx;
}